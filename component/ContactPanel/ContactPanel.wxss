/* ContactPanel.wxss */
@import '../../assets/css/public.wxss';

.contact-panel{
  position: fixed;
  right: 20rpx;
  bottom: 50rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .2);
  border: 1px solid #fff;
  z-index: 99;
}
.contact-img{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx auto;
}
.contact-text{
  position: absolute;
  top: 15rpx;
  left: 14rpx;
  width: 62rpx;
  height: 62rpx;
  opacity: 0;    
}