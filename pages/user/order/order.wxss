page{ background-color: #000;color: #fff; }
.order-list .header{
  border-bottom: 1px solid #3c3c3c;
  padding-bottom: 20rpx;
}
.order-list .order-item{
  padding-bottom: 0;
  border-bottom: 1px solid #3c3c3c;
}
.order-list .order-content{
  padding: 30rpx 0;
  border-bottom: 1px solid #3c3c3c;
}
