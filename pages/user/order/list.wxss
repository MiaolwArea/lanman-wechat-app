/**order.wxss**/
page{ background-color: #f4f4f4; color: #1a1a1a; }
.no-order{
  justify-content: center;
  flex-flow: column wrap;
  color: #808080;
}
.no-order-text{
  margin-top: 20rpx;
}
.no-order .no-order-image{
  width: 206.077348rpx;
  margin-top: 300rpx;
  opacity: .4;
}
/* tab切换 */
.swiper-tab{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%; 
  border-top: 2rpx solid #f4f4f4; 
  text-align: center; 
  line-height: 80rpx;
  background-color: #fff;
}
.swiper-tab-list{
  font-size: 30rpx; 
  display: inline-block; 
  width: 20%; 
  color: #777777; 
}
.on{
  color: #b30000; 
  border-bottom: 5rpx solid #b30000;
}

.order-list{
  margin-top: 110rpx;
}
.order-item .header, .order-item .goods-link, .footer .goods-count{
  border-bottom: 1px solid #f4f4f4;
}
.goods-link{
  padding: 20rpx 0;
  justify-content: left;
}
.goods-link .order-image{
  width: 150rpx;
  margin-right: 30rpx;
}
.footer .goods-count{
  padding: 20rpx 0;
}
.footer .footer-ctl{
  margin-top: 20rpx;
}
.goods-count .num{
  margin-right: 20rpx;
}
.footer .footer-ctl{
   justify-content: flex-end; 
}
.order-btn{
  border: 1px solid #000;
  padding: 5rpx 10rpx;
  border-radius: 3px;
}