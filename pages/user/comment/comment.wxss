/** comment.wxss **/
.mr-10{
  margin-right: 10rpx;
}
.comment-list{
  margin-bottom: 120rpx;
}
.star-img{
  width: 30rpx;
  height: 30rpx;
  padding-right: 5rpx;
}
.comment-goods-pic{
  width: 80rpx;
  height: 80rpx;
}
.comment-content .remark{
  width: calc(100% - 40rpx);
  padding: 20rpx;
  height: 200rpx;
}
.comment-img{
  width: 200rpx;
  border: 1px solid #f4f4f4;
}
.pic-list .list-item{
  margin-right: 36rpx;
  margin-bottom: 10rpx;
  vertical-align: bottom;
}
.pic-list .list-item:nth-of-type(3n){
  margin-right: 0px;
}
.add-pic{
  height: 200rpx;
  width: 200rpx;
  border: 2px dotted #ccc;
  margin-bottom: 10rpx;
  justify-content: center; 
  flex-direction: column;
}
.camera-icon{
  width: 60rpx;
  height: 60rpx;
}

.btn-area{
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #b20000;
  width: 100%;
}
.btn-area .submit{
  color: #fff;
  background-color: #b20000;
  height: 100rpx;
  line-height: 100rpx;
}