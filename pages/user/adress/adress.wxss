/**adress.wxss**/
page{ background-color: #000;color: #fff; }
.adress{ color: #a3a3a3; }
.goods-item, .receive-info{ border-bottom: 1px solid #3c3c3c; }
.receive .name{ margin-right: 20rpx; }
.control .edit{margin-right: 20rpx;}
.control .btn{ border: 1px solid #fff;border-radius: 26rpx;padding: 10rpx 15rpx; }

.add-adress{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #a3a3a3;
}
.address-item { justify-content: flex-start;padding: 30rpx; }
.address-item label{ width: 200rpx; }
.address-item .consignee{ width: 500rpx; }

.btn-area{
  padding: 30rpx;
}
.btn-area .submit{
  background-color: #a3a3a3;
  border-radius: 0;
  color: #fff;
}

.alert-tip .fx-bg{
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .6)
}
.alert-tip .box{
    position: absolute;
    top: 22%;
    left: 15%;
    width: 70%;
    background-color: #fff;
    z-index: 18;
    border: 1px;
    border-radius: 0.2rem;
    padding: 10rpx 20rpx;
}
.alert-tip .btn-sure{
  margin:20rpx auto;
  background-color:#000;
  color:#fff;
  width:300rpx;
}