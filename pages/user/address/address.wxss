/**adress.wxss**/
page{ background-color: #000;color: #fff; }
.adress{ color: #a3a3a3; }
.goods-item, .receive-info{ border-bottom: 1px solid #3c3c3c; }
.receive .name{ margin-right: 20rpx; }
.control .edit{margin-right: 20rpx;}
.control .btn{ border: 1px solid #fff;border-radius: 26rpx;padding: 10rpx 20rpx; }

.add-adress{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #a3a3a3;
}
.add-adress .add-btn{
  width: 50%;
}
.add-adress .add-btn:first-child{
  border-right: 1px solid #777;
}
.address-item {
  justify-content: flex-start;
  padding: 30rpx;
  border-bottom: 1px solid #3c3c3c;
}
.address-item label{ width: 200rpx; }
.address-item .consignee{ width: 500rpx; }

.btn-area{
  padding: 30rpx;
}
.btn-area .submit{
  background-color: #a3a3a3;
  border-radius: 0;
  color: #fff;
}
