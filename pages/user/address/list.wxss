/**address.wxss**/
page{ background-color: #000;color: #fff; }
.address{ color: #a3a3a3; }
.goods-item, .receive-info{ border-bottom: 1px solid #3c3c3c; }
.receive .name{ margin-right: 20rpx; }
.control .edit{margin-right: 20rpx;}
.control .btn{ border: 1px solid #fff;border-radius: 26rpx;padding: 10rpx 20rpx; }

.add-address{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #a3a3a3;
}
.add-address .add-btn{
  width: 50%;
}
.add-address .add-btn:first-child{
  border-right: 1px solid #777;
}
