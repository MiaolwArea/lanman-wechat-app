/** shoppingCart.wxss **/
.position-image{
  width: 30rpx;
  margin-right: 30rpx;
}
.order-list{
  padding-top: 110rpx;
}
.goods-link{
  padding: 20rpx 0;
  justify-content: left;
}
.goods-link .order-image{
  width: 150rpx;
  margin-right: 30rpx;
}
.footer .footer-ctl{
  margin-top: 20rpx;
}
.goods-count .num{
  margin-right: 20rpx;
}
.footer .footer-ctl{
   justify-content: flex-end; 
}
.order-btn{
  border: 1px solid #000;
  padding: 5rpx 10rpx;
  border-radius: 3px;
}
.order-info .code{
  border: 1px solid #ccc;
  padding: 0 10rpx;
}
.order-info .remark{
  width: calc(100% - 40rpx);
  margin-top: 20rpx;
  border: 1px solid #ccc;
  padding: 20rpx;
}

.footer-area{
  width: 100%;
  height: 110rpx;
  letter-spacing: 2px;
  border-top: 1px solid #f4f4f4;
}
.footer-area .sure{
  background-color: #b30000;
  line-height: 110rpx;
  color: #fff;
}