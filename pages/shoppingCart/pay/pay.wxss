/** shoppingCart.wxss **/
page{ background-color: #f4f4f4; }

.address-text .name-phone{
  padding-bottom: 10rpx;
}
.position-image{
  width: 30rpx;
  margin-right: 30rpx;
}
.order-list{
  margin-top: 110rpx;
}
.goods-link{
  padding: 20rpx 0;
  justify-content: left;
}
.goods-link .order-image{
  width: 150rpx;
  margin-right: 30rpx;
}
.footer .goods-count{
  padding: 20rpx 0;
}
.footer .footer-ctl{
  margin-top: 20rpx;
}
.goods-count .num{
  margin-right: 20rpx;
}
.footer .footer-ctl{
   justify-content: flex-end; 
}
.order-btn{
  border: 1px solid #000;
  padding: 5rpx 10rpx;
  border-radius: 3px;
}

.footer-area{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 9;
  height: 110rpx;
  letter-spacing: 2px;
  border-top: 1px solid #f4f4f4;
}
.footer-area .sure{
  background-color: #b30000;
  line-height: 110rpx;
  color: #fff;
}