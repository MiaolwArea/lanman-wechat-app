/* 公共样式  */
image{
  width: 100%;
}
.flex{
  display: flex;
	display: -webkit-flex;
	align-items: center;
	justify-content: space-between;
}
.line{
  background-color: #ccc;
  width: 200rpx;
  height: 2rpx;
}
.dlot{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #ccc;
}
.red-dlot{
  position: absolute;
  left: 55rpx;
  top: 3rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #b30000;
  font-size: 20rpx;
  line-height: 30rpx;
  display: block;
}
.line-cut{
  width: 100%;
  height: 20rpx;
  background-color: #f4f4f4;
}
.arrow:after, .arrow:before {
  border: 15rpx solid transparent;
  border-left: 15rpx solid #fff;
  width: 0;
  height: 0;
  position: absolute;
  top: -18rpx;
  right: -18rpx;
  content: ' '
}
.arrow:before {
  border-left-color: #a3a3a3;
  right: -22rpx;
}
radio, checkbox{
  transform:scale(.7);
}
.bingo-icon{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
/* 删除滑动效果 */
.touch-item {
 font-size: 14px;
 display: flex;
 justify-content: space-between;
 border-bottom:1px solid #ccc;
 width: 100%;
 overflow: hidden
}
.content {
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(130rpx);
 transform: translateX(130rpx);
 margin-left: -130rpx;
 width: 100%;
}
.del {
 background-color: #d30404;
 width: 130rpx;
 height: 150rpx;
 color: #fff;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 -webkit-transform: translateX(130rpx);
 transform: translateX(130rpx);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}
